
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header id="myCarousel" class="main-header " style="z-index: -1; padding-bottom:50px">
    <section class="slide-wrapper">

        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="3000">
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                <li data-target="#carousel-example-generic" data-slide-to="2" class=""></li>
                <li data-target="#carousel-example-generic" data-slide-to="3" class=""></li>
                <li data-target="#carousel-example-generic" data-slide-to="4" class=""></li>
            </ol>
            <div class="carousel-inner">
                <div class="item slides active">
                    <div class="slide-1">
                        <img src="~/Assets/Image/slider1.png" class="img-responsive">
                    </div>
                </div>
                <div class="item slides">
                    <div class="slide-2">
                        <img src="~/Assets/Image/slider2.png" class="img-responsive">
                    </div>
                </div>
                <div class="item slides">
                    <div class="slide-3">
                        <img src="~/Assets/Image/slider3.png" class="img-responsive">
                    </div>
                </div>
                <div class="item slides">
                    <div class="slide-4">
                        <img src="~/Assets/Image/slider4.png" class="img-responsive">
                    </div>
                </div>
                <div class="item slides">
                    <div class="slide-5">
                        <img src="~/Assets/Image/slider5.png" class="img-responsive">
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="fa fa-angle-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="fa fa-angle-right"></span>
            </a>
        </div>
        <!-- Controls -->
    </section>
</header>

<div class="container">
    <div class="row" style="padding-left:300px;">
        <div class="col-lg-7">
            <form action="/Auditions/AuditionsTest" method="post" >
                <div class="form-group">
                    <label for="code" style="padding-left:40%">Nhập mã code</label>
                    <input type="text" class="form-control" name="code" id="email">
                </div>
               <button type="submit" class="btn btn-danger">Test</button>           
            </form>
        </div>
    </div>
    
</div>
