
@model TestingSystem.Models.Test
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@*<link href="~/Scripts/DatetimePicker/css/gijgo.min.css" rel="stylesheet" />*@
<style>
    .gj-icon {
        position: absolute;
        left: 191px;
        margin-top: 5px;
    }

    #StartDate, #EndDate {
        margin-right: 0;
        width: 220px;
        position: relative;
        border: 1px solid #cccccc;
    }

    #Description {
        height: 200px;
        width: 776px;
    }
</style>
<section class="content-header">
    <h1>
        Create Exam
    </h1>
    <ol class="breadcrumb">
        <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Create New Test</li>
    </ol>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Create New Test</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" novalidate role="form" action="@Url.Action("Create", "Test", new { area = "Admin" })" method="post">
            @Html.AntiForgeryToken()
            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label">TestName</label>
                    <div class="col-sm-6">
                        <input type="text" name="TestName" id="TestName" class="form-control" onchange="CategoryCheckCreate()" />
                        @Html.ValidationMessageFor(model => model.TestName, "", new { @class = "text-danger" })
                    </div>
                    <span id="Status"></span>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">ExamPaper</label>
                    <div class="col-sm-6">
                        @Html.DropDownListFor(model => model.ExamPaperID, null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label">Start Date</label>
                    <div class="col-sm-6">
                        <input name="StartDate" id="StartDate" type="date" />
                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label">End Date</label>
                    <div class="col-sm-6">
                        <input name="EndDate" id="EndDate" type="date" />
                        @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label">Active</label>
                    <div class="col-sm-6">
                        <select class="form-control" id="" name="Status1" style="width: 222px;" required>
                            <option value="" selected disabled hidden>--Choice one--</option>
                            <option value="1">Public</option>
                            <option value="2">Private</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label">PassingScore</label>
                    <div class="col-sm-2">
                        <input name="PassingScore" id="" type="number" class="form-control" />
                        @Html.ValidationMessageFor(model => model.PassingScore, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div><!-- /.box-body -->
            <div class="box-footer">
                <a href="@Url.Action("Index","Exams")" class="btn-cancel">Cancel</a>
                <button type="submit" class="btn btn-success pull-right" id="btnsub2">Save</button>
            </div><!-- /.box-footer -->
        </form>
    </div><!-- /.box -->
</section>
<script language="JavaScript">
    function checkstatus(id) {
        if (id.checked == true)
            id.value = true;
        else
            id.value = false;
    }
    function CategoryCheckCreate() {
        $("#Status").html("Checking...");
        $.post("@Url.Action("_CheckExamsAvailableCreate", "Test")",
	        {
                userdata: $("#TestName").val()
	        },
	        function (data) {
                if ($("#TestName").val() == "") {
			        $("#Name-error").css("display", "none");
		        }
		        if (data == 0) {
			        $("#Status").html('<font color="Green">Available !. you can take it.</font>');
                    $("#TestName").css("border-color", "Green");
			        $("#btnsub2").css("display", "block");
		        }
		        else {
			        $("#Status").html('<font color="Red">Test Exists!</font>');
                    $("#TestName").css("border-color", "Red");
			        $("#btnsub2").css("display", "none");
		        }
	        });
    }
</script>
